# Copy this file to .env and change the values as needed

NEO4J_PASSWORD=your_password_here

# Main IP address for your server (where Neo4j and backend are hosted)
# For local development: localhost
# For remote deployment: your server's external IP address
NEO4J_IP=your_server_ip_here

# Advanced: Only customize these if you need different URLs
# BACKEND_HOST=different_backend_ip  # defaults to NEO4J_IP
# NEO4J_BROWSER_HOST=different_browser_ip  # defaults to NEO4J_IP
